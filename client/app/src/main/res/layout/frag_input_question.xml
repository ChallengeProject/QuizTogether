<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_quiz_info"
    android:orientation="vertical"
    android:paddingRight="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/quizTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/hint_question"
            android:inputType="text"
            android:lines="3"
            android:maxLength="50"
            android:maxLines="3"
            android:minLines="3"
            android:textColor="@color/darker_gray"
            android:textSize="14dp" />

        <ImageButton
            android:id="@+id/autoBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/ic_auto"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/clearBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_delete"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <include
        android:id="@+id/optionView1"
        layout="@layout/layout_question_option" />

    <include
        android:id="@+id/optionView2"
        layout="@layout/layout_question_option" />

    <include
        android:id="@+id/optionView3"
        layout="@layout/layout_question_option" />
</LinearLayout>