<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prizeButton"
            android:layout_width="46dp"
            android:layout_height="27dp"
            android:layout_marginLeft="19dp"
            android:background="@drawable/rect_back_white_radius_14"
            android:gravity="center"
            android:text="@string/prize"
            android:textAlignment="center"
            android:textColor="@color/darker_gray"
            android:textSize="14dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/goodsButton"
            android:layout_width="46dp"
            android:layout_height="27dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/rect_back_white_radius_14"
            android:gravity="center"
            android:text="@string/goods"
            android:textAlignment="center"
            android:textColor="@color/darker_gray"
            android:textSize="14dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/detailPrize"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:layout_marginLeft="19dp"
            android:background="@android:color/transparent"
            android:hint="총 상금 "
            android:inputType="number"
            android:textColor="@color/navy"
            android:textSize="14dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/detailGoods"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:layout_marginLeft="19dp"
            android:background="@android:color/transparent"
            android:hint="@string/goods"
            android:textColor="@color/navy"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/userID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:gravity="start"
            android:textColor="@color/navy"
            android:textSize="14dp"
            tools:text="아이디" />
    </LinearLayout>

    <EditText
        android:id="@+id/broadcastTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:hint="@string/room_title"
        android:inputType="textShortMessage"
        android:maxLength="20"
        android:textAlignment="center"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="14dp"
        android:background="@color/inner_separator" />

    <EditText
        android:id="@+id/broadcastDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/room_description"
        android:inputType="textMultiLine"
        android:lines="2"
        android:maxLength="50"
        android:textAlignment="center"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/broadcastTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="14.1dp"
        android:hint="시간 설정하기"
        android:textAlignment="center"
        android:textColorHint="@color/darker_gray"
        android:textSize="14dp"
        android:visibility="gone" />
</LinearLayout>